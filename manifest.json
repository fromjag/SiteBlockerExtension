{
    "manifest_version": 3,
    "name": "Site Blocker",
    "version": "1.0",
    "description": "Block websites based on selected mode",
    "permissions": [
      "storage",
      "webNavigation",
      "tabs"
    ],
    "action": {
      "default_title": "Site Blocker",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }